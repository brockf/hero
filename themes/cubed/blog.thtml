{extends file="layout.thtml"}
{block name="title"}
{$title} - {$smarty.block.parent}
{/block}
{block name="content"}
	<h1>{$title}</h1>
	
	<ul class="blog">
	{foreach $content as $item}
		<li>
			<a class="title" href="{$item.url}">{$item.title}</a>
			<h4 class="date">{$item.date|date_format:"%A, %B %e, %Y"}</h4>
			{$item.summary}
		</li>
	{/foreach}
	</ul>
	
	{$pagination}
	
{/block}